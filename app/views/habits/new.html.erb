<% provide(:title, 'Create Habit') %>
<h1>Create New Habit</h1>

<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <%= form_for(@habit) do |f| %>

      <%= f.label :title %>
      <%= f.text_field :title, class: 'form-control' %>

      <%= f.label :classification %>
      <%= f.select(:classification, ['Positive', 'Negative', 'Unknown'], {}, { class: 'form-control' }) %>

      <%= f.label :quantifier_unit, "Measurement Unit" %>
      <%= f.select(:quantifier_unit, ['Not Applicable', 'Hours', 'Minutes', 'Pages'], {}, { class: 'form-control' }) %>
      
      <%= f.submit "Create my habit", class: "btn btn-primary" %>
    <% end %>
  </div>
</div>